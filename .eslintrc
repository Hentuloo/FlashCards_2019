{
  "parser": "babel-eslint",

  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb",
    "prettier",
    "prettier/react"
  ],

  "env": {
    "jest": true
  },

  "globals": {
    "document": true,
    "window": true,
    "localStorage": true
  },

  "rules": {
    "import/no-unresolved": 0,
    "import/no-absolute-path": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  }
}
